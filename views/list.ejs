<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% tasks.forEach(function(tasks){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value=<%= tasks._id %>  onChange="this.form.submit()">
      <p><%= tasks.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <% }) %>

  <form action="/" method="post" class="item">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
      class="Input"
    />
    <button class="round" type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
